{
  "name": "commit2feed",
  "version": "0.1.0",
  "author": "Furukawa Atsushi <atsushifx@aglabo.com>",
  "license": "MIT",
  "description": "commit2feed: create feed from commit log & diff",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "prepare": "husky",
    "compile": "npm exec babel src --out-dir dist",
    "release": "npx ncc build ./dist/main.js -o release -m ",
    "build": "npm run compile && npm run release",
    "jsdoc": "npx jsdoc -c ./jsdoc.config.json",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
    "lint": "npx eslint src/**.js --fix",
    "format": "npx prettier src/**.js --write"
  },
  "keywords": [
    "github",
    "actions",
    "javascript"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "feed": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-modules": "^0.1.6",
    "@eslint/js": "^9.2.0",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "src/*.js": "pnpx eslint --fix",
    "**.js*": "pnpx prettier --write"
  }
}
