{
  "name": "commit2feed",
  "version": "0.1.0",
  "author": "Furukawa Atsushi <atsushifx@aglabo.com>",
  "license": "MIT",
  "description": "commit2feed: create feed from commit log & diff",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "prepare": "pnpx husky init",
    "compile": "pnpm exec babel src --out-dir dist",
    "builddoc": "pnpx jsdoc -c ./jsdoc.config.js src",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" pnpx jest",
    "lint": "pnpx eslint src/**.js --fix",
    "format": "pnpx prettier src/**.js --write"
  },
  "keywords": [
    "github",
    "actions",
    "javascript"
  ],
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-modules": "^0.1.6",
    "@eslint/js": "^9.2.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.2.2",
    "ncc": "^0.3.6",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "src/*.js": "pnpx eslint --fix",
    "**.js*": "pnpx prettier --write"
  }
}
